<div class="row>">
  <div class="col-md-3>">
    <ul class="sidebar-list">
      <li class="sidebar-item"><%= link_to "edit Profile", edit_user_registration_path, class: "sidebar-link active" %> </li>
    </ul>
    <%= link_to "View My Profile", user_path(current_user.id), class: "btn  btn-detail" %>
  </div>
  <div class="panel-body">
    <div class="row">
<div class="col-md-6 col-md-offset-3">
<h2 class="text-center">Profile - Edit </h2>
      <div class="container">
      </div>
    </div>

  


  <div class="col-md-6 col-md-offset-1 text-center">
    <div class="panel panel-default">Your Profile </div>
      </div>
</div>

<div class="col-md-6 col-md-offset-3">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render 'shared/devise_mes' %>

<%= form_for @user, url: user_path(:avatar), method: 'post', html: {multipart: true} do |f| %>
            <div class="row">
              <div class="form-group">
                <span class="btn btn-default btn-file text-babu">
                  <i class="fa fa-cloud-upload"></i>Select Photos
                    <%= file_field_tag "images[]", type: :file, multiple: true %>
                </span>
              </div>
            </div>
            <div class="text-center">
              <%= f.submit "Add Photos", class: "btn btn-form" %>
            </div>

                    <% end %>
          </div>
        </div>

<div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your email", class: "form-control"%>
  </div>

  <div class="form-group">
    <%= f.text_field :username, autofocus: true, autocomplete: "off", placeholder: "your username (e.g. Mr Connor)", class: "form-control"%>
  </div>

   <div class="form-group">
    <%= f.text_area :description, rows:5, cols:25, autofocus: true, autocomplete: "off", placeholder: "Tell us a little about yourself!", class: "form-control"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="form-control">
    <%= f.password_field :password, autocomplete: "off", placeholder: "new password", class: "form-control" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>
<br />
  <div class="form-control">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "confirm new password", class: "form-control" %>
  </div>
<br />
  <div class="actions">
    <%= f.submit "Save Updates", class: "btn btn-normal btn-block" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
  </div>
</div>
</div>

  <br />
  <div class="panel panel-default">
    <div class="panel-heading"> Your Phone Number</div>
    <div class="panel-body">
      <div class="container">
        <% if !current_user.phone_number.blank? %>
          <h3> <%= current_user.phone_number%></h3>
          <button class="btn btn-default" data-toggle="modal" data-target="#update-phone"> Update Phone Number
          </button>
        <% if current_user.phone_verified == false %>
          <button class="btn btn-default" data-toggle="modal" data-target="#verify-phone">Verify</button>
          <% end %>
        <% else %>
          <button class="btn btn-default" data-toggle="modal" data-target="#update-phone"> Add Phone Number
        <% end %>
      </div>
  </div>
</div>
</div>


<!--Modal Content for Phone Number Update-->
<div id="update-phone" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Phone Number</h4>
      </div>
      <div class="modal-body">
        <%= form_for current_user, url: update_phone_number_user_path(current_user) do |f| %>
          <div class="form-group">
            <%= f.phone_field :phone_number, class: "form-control", placeholder: "Your Phone Number" %>
          </div>
          <div class="text-center">
          <%= f.submit "Save", class: "btn btn-normal" %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>

<!--Modal Content for Phone Number Verification-->
<div id="verify-phone" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Verify Phone Number</h4>
      </div>
      <div class="modal-body">
        <%= form_for current_user, url: verify_phone_number_user_path(current_user), method: :post  do |f|%>
          <div class="form-group">
            <%= f.phone_field :pin, class: "form-control", placeholder: "Verification Code", value: "" %>
          </div>
          <div class="text-center">
          <%= f.submit "Verify", class: "btn btn-normal" %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>










































