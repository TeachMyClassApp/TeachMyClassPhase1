<div class="row">
<div class="col-md-4 col-md-offset-4">
  <h2 class="text-center">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
   <%= render 'shared/devise_mes' %>
<br />
  <div class="form-group">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "your email", class: "form-control"%>
  </div>
  <div class="form-group">
    <%= f.text_field :username, autofocus: true, autocomplete: "off", placeholder: "your username (e.g. Mr Connor)", class: "form-control"%>
  </div>
  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "your password", class: "form-control" %>
  </div>
<br/>
<br/>
  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-normal btn-block" %>
  </div>
<% end %>
  <hr />
  <%= link_to "Sign up with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook btn-block" %>
  <br />
  <%= link_to "Sign up with Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-google btn-block" %>
    <br />
  <%= link_to "Sign up with Twitter", user_twitter_omniauth_authorize_path, class: "btn btn-twitter btn-block" %>
    <br />
</div>
</div>

