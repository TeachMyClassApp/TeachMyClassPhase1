<div class="row" style="margin-right: 5%">
	<div class="col-md-3">
		<%= render 'lesson_menu' %>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">

			<div class="panel-heading">
				Location
			</div>

			<div class="panel-body">
				<div class="container">
					<div class="row">
						<div class="col-md-offset-3 col-md-6">
							<%= form_for @lesson do |f| %>

							<div class="row">
								<div class="form-group">
									<label>Address</label>
								<%= f.text_field :address, placeholder: "What is the lesson address?", class: "form-control", required: "true", id: "autoaddress" %>
						</div>
					</div>
					<div class="text-center">
						<div><%= f.submit "Save My Location", class: "btn btn-form" %></div>
				</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script>

		 $(function(){
		 	$("#autoaddress").geocomplete();
		 })
</script>