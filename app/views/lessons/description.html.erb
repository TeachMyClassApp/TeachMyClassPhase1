<div class="row" style="margin-right: 5%">
	<div class="col-md-3">
		<%= render 'lesson_menu' %>
	</div>
	<div class="col-md-9">
		<div class="panel panel-default">

			<div class="panel-heading">
				Description
			</div>

			<div class="panel-body">
				<div class="container">
					<div class="row">
						<div class="col-md-offset-3 col-md-6">
							<%= form_for @lesson do |f| %>
					

							<div class="row">
								<div class="form-group">
									<label>Lesson Title</label>
								<%= f.text_field :lesson_name, placeholder: "Something Jazzy", class: "form-control", required: "true"%>
						</div>
					</div>


							<div class="row">
								<div class="form-group">
									<label>Description</label>
							<%= f.text_area :description,rows: 7, placeholder: "Give a short description of the lesson you want taught.", class: "form-control", required: "true" %>
								</div>
							</div>

							<div class="row">
								<div class="form-group">
									<label>Keywords</label>
							<%= f.text_area :keywords, rows: 4, placeholder: "Optional: List keywords seperating each with a comma.", class: "form-control", required: "false" %>
								</div>
							</div>
					<div class="text-center">
						<div><%= f.submit "Save My Description", class: "btn btn-form" %></div>
					</div>
							<% end %>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
